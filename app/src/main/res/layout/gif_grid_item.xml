<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:background="@color/white"
            android:gravity="center_vertical">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_account_circle_black_24dp"
                android:backgroundTint="@color/primary_dark"
                android:id="@+id/sd"
                android:layout_weight="1" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <TextView
                android:text=" susmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textColorHighlight="@color/monsoon"
                android:textColorLink="@android:color/holo_blue_dark"
                android:textColor="@color/aluminum"
                android:layout_weight="10" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40" />
        </LinearLayout>

        <com.felipecsl.gifimageview.library.GifImageView
            android:id="@+id/gif_image_view"
            android:layout_width="match_parent"
            android:layout_height="350dp"

            android:scaleType="fitXY"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:minHeight="40dp"
            android:gravity="center_vertical">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <Button
                android:id="@+id/sun"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/ic_favorite_border_black_24dp"
                android:layout_width="20dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:layout_height="20dp"
                android:paddingBottom="0dp"
                android:paddingEnd="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:padding="0dp"
                android:layout_weight="1" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <Button
                android:id="@+id/comment"
                android:background="@mipmap/ic_edit_black_24dp"
                android:elevation="11dp"
                android:layout_alignBaseline="@+id/settng"
                android:layout_alignBottom="@+id/settng"
                android:layout_alignStart="@+id/textView"
                tools:background="@mipmap/ic_edit_black_24dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="0dp"
                android:paddingBottom="0dp"
                android:paddingEnd="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:backgroundTint="@color/primary_darker"
                android:layout_weight="1" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <Button
                android:id="@+id/share"
                style="@android:style/Widget.Holo.Light.Button"
                android:background="@mipmap/ic_share_black_24dp"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/textView"
                android:elevation="11dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="0dp"
                android:paddingBottom="0dp"
                android:paddingEnd="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:backgroundTint="@color/primary_darker"
                android:layout_weight="1" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="45" />

        </LinearLayout>

        <TextView
            android:text="nice gif #awesome #superb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/giftitle"
            android:background="@color/white"
            android:textColor="@color/oil"
            android:paddingLeft="8dp" />

        <TextView
            android:text="user1 commented"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentbox"
            android:background="@color/white"
            android:textColor="@color/oil"
            android:paddingLeft="8dp" />

    </LinearLayout>


</RelativeLayout>